{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "strict": true,
    "importHelpers": true,
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ES2017", "DOM"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@global-context/react": ["./packages/global-context/src/index.ts"],
      "@global-context/babel-preset": ["./packages/babel-transformer/src/index.ts"],
      "@global-context/webpack-loader": ["./packages/webpack-loader/src/index.ts"]
    },
    "outDir": "tsc-out",
    "typeRoots": ["node_modules/@types"]
  },
  "exclude": ["node_modules", "__fixtures__", "tsc-out", "dist"]
}
